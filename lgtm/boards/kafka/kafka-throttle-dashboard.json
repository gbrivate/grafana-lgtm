{
  "id": null,
  "uid": "kafka-throttle-dashboard",
  "title": "Kafka Client Throttling",
  "schemaVersion": 39,
  "version": 1,
  "timezone": "browser",
  "editable": true,
  "panels": [
    {
      "type": "stat",
      "title": "Average Throttle (ms)",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "targets": [
        {
          "expr": "rate(kafka_client_throttle_time_ms_sum[$__rate_interval]) / rate(kafka_client_throttle_time_ms_count[$__rate_interval])",
          "legendFormat": "avg throttle"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 5
      }
    },
    {
      "type": "stat",
      "title": "P95 Throttle (ms)",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(kafka_client_throttle_time_ms_bucket[$__rate_interval])) by (le))",
          "legendFormat": "p95 throttle"
        }
      ],
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 5
      }
    },
    {
      "type": "stat",
      "title": "P99 Throttle (ms)",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(kafka_client_throttle_time_ms_bucket[$__rate_interval])) by (le))",
          "legendFormat": "p99 throttle"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 6,
        "h": 5
      }
    },
    {
      "type": "timeseries",
      "title": "Throttle Over Time (Avg by Topic)",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "rate(kafka_client_throttle_time_ms_sum[$__rate_interval]) / rate(kafka_client_throttle_time_ms_count[$__rate_interval])",
          "legendFormat": "{{topic}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      },
      "gridPos": {
        "x": 0,
        "y": 5,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "P95 Throttle by Topic",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(kafka_client_throttle_time_ms_bucket[$__rate_interval])) by (le, topic))",
          "legendFormat": "topic={{topic}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      },
      "gridPos": {
        "x": 12,
        "y": 5,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "timeseries",
      "title": "Producer Throttle Only",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "rate(kafka_client_throttle_time_ms_sum{direction=\"producer\"}[$__rate_interval]) / rate(kafka_client_throttle_time_ms_count{direction=\"producer\"}[$__rate_interval])",
          "legendFormat": "producer avg throttle"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms"
        }
      },
      "gridPos": {
        "x": 0,
        "y": 13,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "heatmap",
      "title": "Throttle Distribution Heatmap",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "sum(rate(kafka_client_throttle_time_ms_bucket[$__rate_interval])) by (le)",
          "legendFormat": "{{le}}"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 13,
        "w": 12,
        "h": 8
      }
    },
    {
      "type": "stat",
      "title": "Throttle Alert Trigger",
      "datasource": null,
      "targets": [],
      "description": "Prometheus alert example:\n\nhistogram_quantile(0.95, sum(rate(kafka_client_throttle_time_ms_bucket[5m])) by (le)) > 5",
      "gridPos": {
        "x": 0,
        "y": 21,
        "w": 24,
        "h": 4
      }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "DS_PROMETHEUS",
        "query": "prometheus",
        "label": "Prometheus",
        "refresh": 1,
        "hide": 0
      }
    ]
  }
}
