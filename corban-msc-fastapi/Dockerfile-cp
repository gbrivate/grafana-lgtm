FROM python:3.11-slim

# --- Environment variables for OpenTelemetry tuning ---
ENV LOG_LEVEL=INFO \

    # --- Service metadata ---
    OTEL_SERVICE_NAME=corban-msc-fastapi \

    # --- Exporters (traces, metrics, logs) ---
    OTEL_TRACES_EXPORTER=otlp \
    OTEL_METRICS_EXPORTER=otlp \
    OTEL_LOGS_EXPORTER=otlp \
    OTEL_EXPORTER_OTLP_PROTOCOL=grpc \
    OTEL_EXPORTER_OTLP_ENDPOINT=http://grafana-service.lgtm.svc.cluster.local:4317 \
    OTEL_EXPORTER_OTLP_TRACES_INSECURE=true \
    OTEL_EXPORTER_OTLP_METRICS_INSECURE=true \
    OTEL_EXPORTER_OTLP_LOGS_INSECURE=true \
    OTEL_EXPORTER_OTLP_COMPRESSION=gzip \

    # --- Batch span processor (BSP) tuning ---
    OTEL_BSP_SCHEDULE_DELAY=1000 \
    OTEL_BSP_EXPORT_TIMEOUT=10000 \
    OTEL_BSP_MAX_EXPORT_BATCH_SIZE=512 \
    OTEL_BSP_MAX_QUEUE_SIZE=4096 \

    # --- Metric export tuning ---
    OTEL_METRIC_EXPORT_INTERVAL=1000 \
    OTEL_METRIC_EXPORT_TIMEOUT=5000 \

    # --- Logging instrumentation ---
    OTEL_PYTHON_LOGGING_AUTO_INSTRUMENTATION_ENABLED=true \
    OTEL_PYTHON_LOG_CORRELATION=true \
    OTEL_LOG_LEVEL=info \

    # --- Python runtime performance ---
    PYTHONUNBUFFERED=1 \
    UVICORN_WORKERS=4 \

    OTEL_RESOURCE_ATTRIBUTES=deployment.environment=local,service.version=1.0.0 \
    TZ=America/Sao_Paulo

# Set work directory
WORKDIR /app

# Install dependencies
COPY ./requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Expose FastAPI port
EXPOSE 8001

# --- Instrument the application at startup ---
# The `opentelemetry-instrument` CLI automatically enables all instrumentation
CMD ["opentelemetry-instrument", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8001"]
